<Window x:Class="ReadFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadFiles"
        mc:Ignorable="d"
        Title="文件读取" Height="300" Width="600" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Label Content="Label"/>
            <Label Content="Label" Grid.Row="1"/>
            <TextBox Grid.Column="1" TextWrapping="Wrap" Text="TextBox" Grid.ColumnSpan="2"/>
            <TextBox Grid.Column="1" TextWrapping="Wrap" Text="TextBox" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,193" Grid.RowSpan="2"/>
            <Button Content="Button" Grid.Column="3"/>
            <Button Content="Button" Grid.Column="3" Grid.Row="1" Margin="0,0,0,193" Grid.RowSpan="2"/>
        </Grid>

    </Grid>
</Window>
